<% if micropost.like_user(current_user.id) %>
  <%= link_to micropost_like_path(likes, micropost_id: micropost.id), method: :delete, id: "like-button", remote: true do %>
    <%= image_tag("icon_red_heart.png") %>
  <% end %>
<% else %>
  <%= link_to micropost_likes_path(micropost),method: :post, id: "like-button", remote: true do %>
    <%= image_tag("icon_heart.png") %>
  <% end %>
<% end %>
